    <EventBox height="1"
              bgnormal="#494949"
              bgactive="#494949"/>
    <HBox height="17">
      <HBox id="master_bus_hbox"
            noshowall="true">
          <EventBox width="29"
                    bgnormal="#424242"
                    bgactive="#F48E16"/>
          <EventBox width="6"
                    bgnormal="#F48E16"
                    bgactive="#F48E16"/>
          <EventBox width="1"
                    bgnormal="#000000"
                    bgactive="#000000"/>
