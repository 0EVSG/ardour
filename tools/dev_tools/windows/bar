cd $AD/tracks
export LIBRARY_PATH=$WINGTK/inst/lib:$WINA3/inst/lib
export C_INCLUDE_PATH="$WINGTK/inst/include:$WINA3/inst/include"
export CPLUS_INCLUDE_PATH=$C_INCLUDE_PATH

(
	if [ "$1" != "rebuild" ] ; then
		./waf build -v
	else
		./waf clean 
		if ./waf configure --program-name="Tracks Live" --prefix="/" --bindir="/" --configdir="/share" --noconfirm --no-lv2 --dist-target=mingw ; then ./waf build -v; fi
	fi
) 2>&1 | tee $AD/buildlog.txt #"$AD/ardour-build-log.`date +%Y-%m-%d--%H.%M`.txt"
